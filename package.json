{
  "name": "ai-teacher-whiteboard",
  "version": "1.0.0",
  "description": "AI Teacher Whiteboard using Konva + Gemini 2.0 Flash API",
  "main": "server.js",
  "scripts": {
    "start": "cross-env PORT=3000 react-scripts start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd frontend && npm install"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "katex": "^0.16.22",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "ai",
    "whiteboard",
    "konva",
    "gemini",
    "education"
  ],
  "author": "AI Teacher",
  "license": "MIT",
  "proxy": "http://localhost:3000"
}
